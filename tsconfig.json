{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "target": "es2015",
    "jsx": "react",
    "jsxFactory": "jsx.createElement",
    "jsxFragmentFactory": "jsx.createFragment",
    "typeRoots": ["./src/web/types"],
    "types": ["node"],
    "baseUrl": "./src/web",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/web"],
  "exclude": ["node_modules", "dist", "build"]
}
